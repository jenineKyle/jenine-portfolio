{
  "compilerOptions": {
    "baseUrl": ".", // Set the base directory for relative imports
    "paths": {
      "@components/*": [
        "src/components/*"
      ], // Alias for components
      "@utils/*": [
        "src/utils/*"
      ], // Alias for utils
      "@models/*": [
        "src/models/*"
      ] // Alias for models
    },
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
